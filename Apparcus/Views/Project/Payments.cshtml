@using X.PagedList
@model Core.ViewModels.IPageListModel<Core.ViewModels.PaymentDTO>
@{
    ViewData["Title"] = "Payments";
    Layout = ViewBag.Layout;
    var projectId = int.Parse(Context.Request.Query["projectId"].FirstOrDefault() ?? "0");
}
<style>
    body {
        counter-reset: Serial;
    }

    tr td:first-child:before {
        counter-increment: Serial;
        content: counter(Serial);
    }
</style>
<div class="page-wrapper">
    <div class="content">
        <div class="d-md-flex d-block align-items-center justify-content-between page-breadcrumb mb-3">
            <div class="my-auto mb-2">
                <h2 class="mb-1">Payments for "@ViewBag.ProjectName"</h2>
                <nav>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="javascript:void(0);"><i class="ti ti-smart-home"></i></a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Project">Projects</a></li>
                        <li class="breadcrumb-item active">Payments</li>
                    </ol>
                </nav>
            </div>
            <div class="d-flex my-xl-auto right-content align-items-center flex-wrap">
                <a asp-action="Index" asp-controller="Project" class="btn btn-primary">
                    <i class="ti ti-arrow-left me-2"></i>Back to Projects
                </a>
            </div>
        </div>

        <div class="alert alert-success d-flex align-items-center mb-4">
            <div>
                <strong>Total Collected:</strong>
                <span class="fs-3 fw-bold"> ₦@Model.Model?.Sum(p => p.AmountPaid)</span>
            </div>
        </div>
        @Html.Partial("_PageSearcher", Model)

        <div class="card-box d-none d-md-block">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th>S/N</th>
                            <th>Reference</th>
                            <th>Contributor</th>
                            <th>Date</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Model?.Any() == true)
                        {
                            foreach (var p in Model.Model)
                            {
                                <tr>
                                    <td></td>
                                    <td><code class="text-muted small">@p.Reference</code></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span>@p.Contributor</span>
                                        </div>
                                    </td>
                                    <td>@p.PaymentDate?.ToString("dd MMM yyyy")</td>
                                    <td><span class="badge bg-success">₦@p.AmountPaid?.ToString("N0")</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="5" class="text-center py-5 text-muted">No payments found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Mobile Cards -->
        <div class="d-block d-md-none">
            <div class="row">
                @if (Model.Model?.Any() == true)
                {
                    foreach (var p in Model.Model)
                    {
                        <div class="col-12 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <h6 class="mb-0">@p.Contributor</h6>
                                                <small>@p.PaymentDate?.ToString("dd MMM yyyy")</small>
                                            </div>
                                        </div>
                                        <span class="badge bg-success fs-6">₦@p.AmountPaid?.ToString("N0")</span>
                                    </div>
                                    <hr>
                                    <small class="text-muted"><strong>Ref:</strong> @p.Reference</small>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="mt-4">
            @Html.Partial("_Pager", Model.Model)
        </div>
    </div>
</div>