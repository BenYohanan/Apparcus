@using Core.ViewModels
@model Core.ViewModels.IPageListModel<ProjectViewModel>
@{
    Layout = ViewBag.Layout;
    ViewData["Title"] = "Projects";
}
<style>

    body {
        counter-reset: Serial; /* / Set the Serial counter to 0 /*/
    }

    tr td:first-child:before {
        counter-increment: Serial; /* / Increment the Serial counter /*/
        content: counter(Serial); /*  / Display the counter /*/
    }
</style>
<div class="page-wrapper">
    <div class="content">
        <div class="d-md-flex d-block align-items-center justify-content-between page-breadcrumb mb-3">
            <div class="my-auto mb-2">
                <h2 class="mb-1">Projects</h2>
                <nav>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:void(0);"><i class="ti ti-smart-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            Dashboard
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Project</li>
                    </ol>
                </nav>
            </div>
            <div class="d-flex my-xl-auto right-content align-items-center flex-wrap ">
                <div class="mb-2">
                    <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#add_project" class="btn btn-primary d-flex align-items-center"><i class="ti ti-circle-plus me-2"></i>Add Project</a>
                </div>
            </div>
        </div>
        @Html.Partial("_PageSearcher", Model)
        <div class="card-box">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead class="thead-light">
                            <tr>
                                <th>S/N</th>
                                <th>Name</th>
                                <th>Created By</th>
                                <th>Supporters</th>
                                <th>Amount Needed</th>
                                <th>Amount Obtained</th>
                                <th>Date Created</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Model != null)
                            {
                                @foreach (var project in Model.Model)
                                {
                                    <tr>
                                        <td></td>
                                        <td>@project.Name</td>
                                        <td>@project.CreatedBy</td>
                                        <td>
                                            <div class="avatar-list-stacked avatar-group-sm">
                                                @if (project.ProjectSupporters.Any())
                                                {
                                                    var supporters = project.ProjectSupporters.Take(3).ToList();
                                                    var remainingCount = project.ProjectSupporters.Count - supporters.Count;

                                                    @foreach (var supporter in supporters)
                                                    {

                                                        <span class="avatar avatar-rounded">
                                                            <a asp-controller="Project"
                                                               asp-action="Supporters"
                                                               asp-route-projectId="@project.Id">
                                                                <img class="border border-white" src="~/template/assets/img/profiles/avatar-02.jpg" alt="img">
                                                            </a>
                                                        </span>
                                                    }

                                                    @if (remainingCount > 0)
                                                    {
                                                        <a class="avatar bg-primary avatar-rounded text-fixed-white fs-12 fw-medium"
                                                           asp-controller="Project"
                                                           asp-action="Supporters"
                                                           asp-route-projectId="@project.Id">
                                                            +@remainingCount
                                                        </a>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted fs-12">No supporters</span>
                                                }
                                            </div>
                                        </td>
                                        <td>@project.AmountNeeded</td>
                                        <td>@project.AmountObtained</td>
                                        <td>@project.DateCreated?.ToString("dd-MMM-yyyy")</td>
                                        @if (!project.Deleted)
                                        {
                                            <td>
                                                <span class="badge badge-success d-inline-flex align-items-center badge-xs">
                                                    <i class="ti ti-point-filled me-1"></i>Active
                                                </span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <span class="badge badge-danger d-inline-flex align-items-center badge-xs">
                                                    <i class="ti ti-point-filled me-1"></i>Inactive
                                                </span>
                                            </td>
                                        }
                                        <td>
                                            <div class="action-icon d-inline-flex">
                                                <a class="me-2" asp-controller="Project" asp-action="Supporters" asp-route-projectId="@project.Id"><i class="ti ti-users-group"></i></a>
                                                <a class="me-2" asp-controller="Project" asp-action="Payments" asp-route-projectId="@project.Id"><i class="ti ti-file-dollar"></i></a>
                                                <a href="#" class="me-2" data-bs-toggle="modal" data-bs-target="#edit_project" onclick='getProjectById(@project.Id)'><i class="ti ti-edit"></i></a>
                                                <a href="#"
                                                   class="me-2"
                                                   data-bs-toggle="modal"
                                                   data-bs-target="#shareProjectModal"
                                                   onclick="getProjectById(@project.Id)">
                                                    <i class="ti ti-share"></i>
                                                </a>
                                                <a href="#" class="text-danger" data-bs-toggle="modal" onclick='confirmDeleteProject(@project.Id)'>
                                                    <i class="ti ti-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="d-block d-md-none">
            <div class="row">
                @if (Model != null)
                {
                    @foreach (var project in Model.Model)
                    {
                        <div class="col-xxl-3 col-lg-4 col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <h6><a href="project-details.html">@project.Name</a></h6>
                                        <div class="dropdown">
                                            <a href="javascript:void(0);" class="d-inline-flex align-items-center" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="ti ti-dots-vertical"></i>
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-end p-3">
                                                <li>
                                                    <a class="dropdown-item rounded-1" asp-controller="Project" asp-action="Supporters" asp-route-projectId="@project.Id"><i class="ti ti-users-group me-2"></i>Contributors</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item rounded-1" asp-controller="Project" asp-action="Payments" asp-route-projectId="@project.Id"><i class="ti ti-file-dollar me-2"></i>Payments</a>
                                                </li>

                                                <li>
                                                    <a href="javascript:void(0);" class="dropdown-item rounded-1" onclick='getProjectById(@project.Id)' data-bs-toggle="modal" data-bs-target="#edit_project"><i class="ti ti-edit me-2"></i>Edit</a>
                                                </li>
                                                <li>
                                                    <a href="javascript:void(0);" class="dropdown-item rounded-1" data-bs-toggle="modal" data-bs-target="#shareProjectModal" onclick='getProjectById(@project.Id)'><i class="ti ti-share me-2"></i>Share</a>
                                                </li>
                                                <li>
                                                    <a href="javascript:void(0);" class="dropdown-item rounded-1" onclick='confirmDeleteProject(@project.Id)' data-bs-toggle="modal" data-bs-target="#delete_modal"><i class="ti ti-trash me-1"></i>Delete</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="mb-3 pb-3 border-bottom">
                                        <p class="text-truncate line-clamb-3 mb-0">
                                            @Html.Raw(project.Description)
                                        </p>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                                        <div class="d-flex align-items-center file-name-icon">
                                            <a href="javascript:void(0);" class="avatar avatar-sm avatar-rounded flex-shrink-0">
                                                <img src="~/template/assets/img/users/user-39.jpg" class="img-fluid" alt="img">
                                            </a>
                                            <div class="ms-2">
                                                <h6 class="fw-normal fs-12"><a href="javascript:void(0);">@project.CreatedBy</a></h6>
                                                <span class="fs-12 fw-normal ">Project Leader</span>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <span class="fs-12 fw-normal ">Deadline</span>
                                                <p class="mb-0 fs-12">@project.DateCreated?.ToString("dd-MM-yyyy")</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <span class="avatar avatar-sm avatar-rounded bg-success-transparent flex-shrink-0 me-2">
                                                <i class="ti ti-checklist text-success fs-16"></i>
                                            </span>
                                            <p>
                                                <small>Total Contributed : </small>
                                                <span class="text-dark">@project.ProjectSupporters.Count()</span>
                                            </p>
                                        </div>
                                        <div class="avatar-list-stacked avatar-group-sm">
                                            @if (project.ProjectSupporters.Any())
                                            {
                                                var supporters = project.ProjectSupporters.Take(3).ToList();
                                                var remainingCount = project.ProjectSupporters.Count - supporters.Count;

                                                @foreach (var supporter in supporters)
                                                {
                                                    <span class="avatar avatar-rounded">
                                                        <a asp-controller="Project"
                                                           asp-action="Supporters"
                                                           asp-route-projectId="@project.Id">
                                                            <img class="border border-white" src="~/template/assets/img/profiles/avatar-02.jpg" alt="img">
                                                        </a>
                                                    </span>
                                                }

                                                @if (remainingCount > 0)
                                                {
                                                    <a class="avatar bg-primary avatar-rounded text-fixed-white fs-12 fw-medium"
                                                       asp-controller="Project"
                                                       asp-action="Supporters"
                                                       asp-route-projectId="@project.Id">
                                                        +@remainingCount
                                                    </a>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted fs-12">No supporters</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                <div class="col-md-12">
                    <div class="text-center mb-4">
                        <a href="#" class="btn btn-primary"><i class="ti ti-loader-3 me-1"></i>Load More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Pager", Model.Model)
</div>
<!-- Add Project Modal -->
@await Html.PartialAsync("_AddProjectModal")
<!-- Edit Project -->
<div class="modal fade" id="edit_project" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="edit_projectId">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" id="edit_name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea id="edit_description" class="form-control summernote"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Amount Needed</label>
                    <input type="number" class="form-control" id="edit_amountNeeded">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-light border me-2" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" id="edit_submit_btn" onclick="updateProject()">Update</button>
            </div>
        </div>
    </div>
</div>
<!-- /Edit Project -->
<!-- Delete Modal -->
<div class="modal fade" id="delete_project_modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <span class="avatar avatar-xl bg-transparent-danger text-danger mb-3">
                    <i class="ti ti-trash-x fs-36"></i>
                </span>
                <h4 class="mb-1">Confirm Delete</h4>
                <p class="mb-3">Are you sure you want to delete this project? This cannot be undone.</p>
                <input type="hidden" id="delete_projectId">
                <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-light me-3" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="delete_submit_btn" onclick="deleteProject()">Yes, Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Delete Modal -->


<!-- Share Project Modal -->
<div class="modal fade" id="shareProjectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Share Support Request
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="shareContent">
                <h5 class="fw-bold" id="shareProjectTitle"></h5>
                <p class="text-muted mb-4">
                    <span id="shareProjectAmount" class="text-primary fw-bold"></span>
                </p>

                <div class="input-group mb-4">
                    <input type="text" class="form-control" id="shareLinkInput" readonly>
                    <button class="btn btn-outline-primary" type="button" id="copyLinkBtn" title="Copy Link">
                        <i class="ti ti-copy"></i>
                    </button>
                    <button class="btn btn-outline-primary" type="button" id="openLinkBtn" title="Open Link">
                        <i class="ti ti-external-link"></i>
                    </button>
                    <button class="btn btn-outline-primary" type="button" id="copyQrImageBtn" title="Copy QR Code as Image">
                        <i class="ti ti-qrcode"></i>
                    </button>
                </div>

                <!-- Hidden QR Image (only used for copying, not displayed) -->
                <img id="qrCodeImage" src="" alt="QR Code" style="display: none !important;">

                <!-- Social Share Buttons -->
                <div class="d-flex flex-wrap gap-2 justify-content-center mt-4">
                    <a href="#" id="shareWhatsapp" target="_blank" class="btn btn-success btn-sm">
                        <i class="ti ti-brand-whatsapp"></i> WhatsApp
                    </a>
                    <a href="#" id="shareTwitter" target="_blank" class="btn btn-info btn-sm text-white">
                        <i class="ti ti-brand-twitter"></i> Twitter
                    </a>
                    <a href="#" id="shareFacebook" target="_blank" class="btn btn-primary btn-sm">
                        <i class="ti ti-brand-facebook"></i> Facebook
                    </a>
                    <a href="#" id="shareTelegram" target="_blank" class="btn btn-info btn-sm text-white">
                        <i class="ti ti-brand-telegram"></i> Telegram
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

