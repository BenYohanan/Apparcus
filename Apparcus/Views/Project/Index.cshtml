



@model List<Core.Models.Project>
@{
    Layout = ViewBag.Layout;
    ViewData["Title"] = "Projects";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="d-flex align-items-center justify-content-between flex-wrap border-bottom mb-4 pb-3">
            <h3 class="page-title">Projects</h3>
            <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add_project">Add Project</a>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Project ID</th>
                        <th>Project Name</th>
                        <th>Leader</th>
                        <th>Team</th>
                        <th>Amount Needed</th>
                        <th>Amount Obtained</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var project in Model)
                        {
                            <tr>
                                <td><input type="checkbox" /></td>
                                <td>PRO-@project.Id.ToString("000")</td>
                                <td>@project.Title</td>
                                <td>@(project.CreatedBy?.FullName ?? "N/A")</td>
                                <td>0</td>
                                <td>@project.AmountNeeded</td>
                                <td>@project.AmountObtained</td>
                                <td>Active</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Project Modal -->
<div class="modal fade" id="add_project" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Project" asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Project Name</label>
                        <input type="text" class="form-control" name="Title">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="Description" class="form-control summernote"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Amount Needed</label>
                        <input type="number" class="form-control" name="AmountNeeded">
                    </div>
                
                    <div class="mb-3">
                        <label class="form-label">Select Users</label>
                        <select style="width: 100%;" id="" class="select2" multiple="multiple"
                            asp-items="@(new SelectList(ViewBag.UsersDropdown, "Id", "UserName"))">
                        </select>
                    </div>

                 

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>