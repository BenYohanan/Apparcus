@model Core.ViewModels.SupportProjectViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Support "@Model.ProjectTitle" - Make a Difference Today</title>

    <!-- Favicon -->
    <link href="~/leadpage/assets/img/Apparcus logo.jpg" rel="icon">
    <link href="~/leadpage/assets/img/Apparcus logo.jpg" rel="apple-touch-icon">

    <!-- Bootstrap 5 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@latest/dist/tabler-icons.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #4361ee;
            --success: #2ecc71;
            --dark: #121529;
            --light: #f8f9fa;
            --gray: #6c757d;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f5f7ff 0%, #e0e7ff 100%);
            min-height: 100vh;
            color: #333;
        }

        .support-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .page-header {
            text-align: center;
            margin-bottom: 3rem;
            padding: 2rem 0;
        }

            .page-header h1 {
                font-size: 2.5rem;
                font-weight: 700;
                color: var(--dark);
                margin-bottom: 0.5rem;
            }

            .page-header p {
                color: var(--gray);
                font-size: 1.1rem;
            }

        .project-card {
            border: none;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
        }

            .project-card:hover {
                transform: translateY(-8px);
            }

        .card-header-custom {
            background: linear-gradient(135deg, var(--primary), #5c7cfa);
            color: white;
            padding: 1.5rem;
            text-align: center;
        }

            .card-header-custom h5 {
                margin: 0;
                font-weight: 600;
                font-size: 1.4rem;
            }

        .progress {
            height: 14px;
            border-radius: 50px;
            background-color: #e9ecef;
            overflow: hidden;
        }

        .progress-bar {
            background: linear-gradient(90deg, #2ecc71, #27ae60);
        }

        .amount-raised {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--success);
        }

        .goal-text {
            font-size: 1.1rem;
            color: var(--gray);
        }

        .supporters-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: #e3f2fd;
            color: var(--primary);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .form-control, .input-group-text {
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
        }

        .input-group-text {
            background-color: #f1f3ff;
            color: var(--primary);
            font-weight: 600;
        }

        .btn-support {
            background: linear-gradient(135deg, var(--primary), #5c7cfa);
            border: none;
            border-radius: 12px;
            padding: 1rem;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-support:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(67, 97, 238, 0.3);
            }

        .thank-you-alert {
            border-radius: 16px;
            padding: 1.5rem;
            text-align: center;
            font-size: 1.1rem;
        }

        footer {
            text-align: center;
            padding: 3rem 1rem;
            color: #888;
            font-size: 0.9rem;
            margin-top: 4rem;
        }

        @@media (max-width: 768px) {
            .page-header h1

        {
            font-size: 2rem;
        }

        .amount-raised {
            font-size: 1.5rem;
        }

        }
    </style>
</head>
<body>
    <div class="support-container">

        <!-- Header -->
        <div class="page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
                    <li class="breadcrumb-item"><a href="/Project" class="text-decoration-none">Projects</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.ProjectTitle</li>
                </ol>
            </nav>
            <h1>Support This Project</h1>
            <p>Be part of something meaningful. Every contribution counts.</p>
        </div>

        <!-- Success Message -->
        @if (TempData["Success"] != null)
        {
            <div class="alert thank-you-alert alert-success shadow-lg">
                <h4>Thank You So Much!</h4>
                <p class="mb-0">@TempData["Success"]</p>
            </div>
        }

        <div class="row g-5">
            <!-- Project Details -->
            <div class="col-lg-8">
                <div class="card project-card h-100">
                    <div class="card-body p-5">
                        <h3 class="card-title mb-4">@Model.ProjectTitle</h3>
                        <p class="lead text-muted fs-5 mb-4">@Model.ProjectDescription</p>

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-end mb-3">
                                <div>
                                    <div class="amount-raised">₦@Model.AmountObtained</div>
                                    <div class="goal-text">raised of ₦@Model.AmountNeeded goal</div>
                                </div>
                                <div class="supporters-badge">
                                    <i class="ti ti-users"></i>
                                    @Model.SupportersCount @(Model.SupportersCount == 1 ? "Supporter" : "Supporters")
                                </div>
                            </div>

                            <div class="progress shadow-sm">
                                @{
                                    var percentage = Model.AmountNeeded > 0
                                    ? Math.Min(100, (Model.AmountObtained / Model.AmountNeeded) * 100)
                                    : 0;
                                }
                                <div class="progress-bar"
                                     role="progressbar"
                                     style="width: @percentage%"
                                     aria-valuenow="@percentage"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                            <div class="text-end mt-2 small text-muted">
                                @percentage.ToString("F1")% funded
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Support Form -->
            <div class="col-lg-4">
                <div class="card project-card">
                    <div class="card-header-custom">
                        <h5>Pledge Your Support</h5>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Support" method="post">
                            <input type="hidden" asp-for="ProjectId" />

                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label fw-semibold"></label>
                                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Your Full Name" required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="your@email.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Amount" class="form-label fw-semibold">Amount to Give</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text fw-bold">₦</span>
                                    <input asp-for="Amount" class="form-control" placeholder="100.00" required />
                                </div>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone (Optional)</label>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="07022...." />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary btn-support text-white w-100">
                                <i class="ti ti-heart-handshake fs-4 align-middle"></i>
                                Support This Project
                            </button>
                        </form>

                        <div class="text-center mt-4 text-muted small">
                            <i class="ti ti-shield-lock"></i>
                            Your information is safe and secure
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer>
            &copy; @DateTime.Now.Year Your Organization Name. Made with <i class="ti ti-heart text-danger"></i> to change lives.
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script>
        // Auto-dismiss success alert after 8 seconds
        setTimeout(function() {
            const alert = document.querySelector('.thank-you-alert');
            if (alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 8000);
    </script>
</body>
</html>