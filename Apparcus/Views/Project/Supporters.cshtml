@using Core.ViewModels
@model Core.ViewModels.IPageListModel<SupporterViewModel>
@{
    Layout = ViewBag.Layout;
    ViewData["Title"] = "Project Supporters";
    var projectId = (int)ViewData["projectId"];
}

<style>
    body {
        counter-reset: Serial;
    }

    tr td:first-child:before {
        counter-increment: Serial;
        content: counter(Serial);
    }
</style>
<div class="page-wrapper">
    <div class="content">
        <div class="d-md-flex d-block align-items-center justify-content-between page-breadcrumb mb-3">
            <div class="my-auto mb-2">
                <h2 class="mb-1">Supporters for "@ViewBag.ProjectTitle"</h2>
                <nav>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:void(0);"><i class="ti ti-smart-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Project">Projects</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Supporters</li>
                    </ol>
                </nav>
            </div>
            <div class="d-flex my-xl-auto right-content align-items-center flex-wrap ">
                <div class="mb-2">
                    <a asp-action="Index" asp-controller="Project" class="btn btn-primary d-flex align-items-center">
                        <i class="ti ti-arrow-left me-2"></i>Back to Projects
                    </a>
                </div>
            </div>
        </div>

        @Html.Partial("_PageSearcher", Model)

        <div class="card-box">
            <div class="col-md-12">
                <div class="table-responsive d-none d-md-block">
                    <table class="table table-striped">
                        <thead class="thead-light">
                            <tr>
                                <th>S/N</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Amount</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Model?.Any() == true)
                            {
                                foreach (var s in Model.Model)
                                {
                                    <tr>
                                        <td></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span>@s.FullName</span>
                                            </div>
                                        </td>
                                        <td>@s.Email</td>
                                        <td>@s.PhoneNumber</td>
                                        <td><span class="badge bg-success">₦@s.Amount?.ToString("N0")</span></td>
                                        <td>@s.DateCreated?.ToString("dd-MMM-yyyy")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="7" class="text-center py-4 text-muted">No supporters yet.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="d-block d-md-none">
            <div class="row">
                @if (Model.Model?.Any() == true)
                {
                    foreach (var s in Model.Model)
                    {
                        <div class="col-xxl-3 col-lg-4 col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <h6 class="text-truncate">@s.FullName</h6>
                                        <div class="dropdown">
                                            <a href="javascript:void(0);" class="d-inline-flex align-items-center" data-bs-toggle="dropdown">
                                                <i class="ti ti-dots-vertical"></i>
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-end p-3">
                                                <li><a class="dropdown-item rounded-1" href="mailto:@s.Email"><i class="ti ti-mail me-2"></i>Email Supporter</a></li>
                                                <li><a class="dropdown-item rounded-1" href="tel:@s.PhoneNumber"><i class="ti ti-phone me-2"></i>Call Supporter</a></li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="mb-3 pb-3 border-bottom">
                                        <p class="text-muted small mb-1">Email</p>
                                        <p class="text-truncate">@s.Email</p>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                                        <div>
                                            <span class="fs-12 fw-normal">Phone</span>
                                            <p class="mb-0 fs-12">@s.PhoneNumber</p>
                                        </div>
                                        <div>
                                            <span class="fs-12 fw-normal">Date</span>
                                            <p class="mb-0 fs-12">@s.DateCreated?.ToString("dd MMM yyyy")</p>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <span class="avatar avatar-sm avatar-rounded bg-success-transparent flex-shrink-0 me-2">
                                                <i class="ti ti-currency-naira text-success fs-16"></i>
                                            </span>
                                            <p class="mb-0">
                                                <small>Contributed: </small>
                                                <span class="text-dark fw-bold">₦@s.Amount?.ToString("N0")</span>
                                            </p>
                                        </div>
                                        <div class="avatar-list-stacked avatar-group-sm">
                                            <span class="avatar avatar-rounded">
                                                <img class="border border-white" src="~/template/assets/img/profiles/avatar-02.jpg" alt="img">
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <p class="text-muted">No supporters yet for this project.</p>
                    </div>
                }
                <div class="col-md-12">
                    <div class="text-center mb-4">
                        <a href="#" class="btn btn-primary"><i class="ti ti-loader-3 me-1"></i>Load More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-none d-md-block">
        @Html.Partial("_Pager", Model.Model)
    </div>
</div>