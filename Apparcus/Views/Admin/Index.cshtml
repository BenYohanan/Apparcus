@{
    Layout = ViewBag.Layout;
    ViewData["Title"] = "Index";
}
<div class="page-wrapper">
    <div class="d-md-flex d-block align-items-center justify-content-between page-breadcrumb mb-3">
        <div class="my-auto mb-2">
            <h2 class="mb-1">Admin Dashboard</h2>
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="index.html"><i class="ti ti-smart-home"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        Dashboard
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Admin Dashboard</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex my-xl-auto right-content align-items-center flex-wrap ">
            <div class="me-2 mb-2">
                <div class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle btn btn-white d-inline-flex align-items-center" data-bs-toggle="dropdown">
                        <i class="ti ti-file-export me-1"></i>Export
                    </a>
                    <ul class="dropdown-menu  dropdown-menu-end p-3">
                        <li>
                            <a href="javascript:void(0);" class="dropdown-item rounded-1"><i class="ti ti-file-type-pdf me-1"></i>Export as PDF</a>
                        </li>
                        <li>
                            <a href="javascript:void(0);" class="dropdown-item rounded-1"><i class="ti ti-file-type-xls me-1"></i>Export as Excel </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="mb-2">
                <div class="input-icon w-120 position-relative">
                    <span class="input-icon-addon">
                        <i class="ti ti-calendar text-gray-9"></i>
                    </span>
                    <input type="text" class="form-control yearpicker" value="2025">
                </div>
            </div>
            <div class="ms-2 head-icons">
                <a href="javascript:void(0);" class="" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-original-title="Collapse" id="collapse-header">
                    <i class="ti ti-chevrons-up"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card border-0 mb-4">
        <div class="card-body d-flex align-items-center justify-content-between flex-wrap pb-1">
            <div class="d-flex align-items-center mb-3">
                <span class="avatar avatar-xl flex-shrink-0">
                    <img src="~/template/assets/img/profiles/avatar-31.jpg" class="rounded-circle" alt="img">
                </span>
                <div class="ms-3">
                    <h3 class="mb-2">Welcome Back, Adrian <a href="javascript:void(0);" class="edit-icon"><i class="ti ti-edit fs-14"></i></a></h3>
                    <p>
                        You have
                        <span class="text-primary text-decoration-underline">@ViewBag.ProjectCount</span> Projects
                        &
                        <span class="text-primary text-decoration-underline">@ViewBag.UserCount</span> Active Users
                    </p>
                </div>
            </div>
            <div class="d-flex align-items-center flex-wrap mb-1">
                <a href="#" class="btn btn-secondary btn-md me-2 mb-2" data-bs-toggle="modal" data-bs-target="#add_project"><i class="ti ti-square-rounded-plus me-1"></i>Add Project</a>
                <a href="#" class="btn btn-primary btn-md mb-2" data-bs-toggle="modal" data-bs-target="#add_user">
                    <i class="ti ti-square-rounded-plus me-1"></i>
                    Add User
                </a>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-xl-4 col-lg-4 col-md-4 mb-3">
            <div class="card border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h5 class="mb-0"> Projects</h5>
                    </div>
                    <h2 class="mb-2">@ViewBag.ProjectCount</h2>
                    <p class="text-muted mb-0">Events open for contributions</p>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 mb-3">
            <div class="card border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h5 class="mb-0"> Users</h5>
                    </div>
                    <h2 class="mb-2">@ViewBag.UserCount</h2>
                    <p class="text-muted mb-0">Users who have contributed recently</p>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 mb-3">
            <div class="card border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h5 class="mb-0">Supporters</h5>
                    </div>
                    <h2 class="mb-2">@ViewBag.TotalSupporters</h2>
                    <p class="text-muted mb-0">Unique individuals who have supported events</p>
                </div>
            </div>
        </div>
    </div>
    <div class="card border-0 mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Top Projects</h5>
            <a href="/Project/Index" class="text-primary">View All</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Created By</th>
                            <th>Supporters</th>
                            <th>Amount Needed</th>
                            <th>Amount Obtained</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.TopProjects != null)
                        {
                            foreach (var project in ViewBag.TopProjects)
                            {
                                <tr>
                                    <td>@project.Name</td>
                                    <td>@project.CreatedBy</td>
                                    <td>
                                        <div class="avatar-list-stacked avatar-group-sm">
                                            <span class="avatar avatar-rounded">
                                                <img class="border border-white" src="~/template/assets/img/profiles/avatar-02.jpg" alt="img">
                                            </span>
                                            <span class="avatar avatar-rounded">
                                                <img class="border border-white" src="~/template/assets/img/profiles/avatar-03.jpg" alt="img">
                                            </span>
                                            <span class="avatar avatar-rounded">
                                                <img class="border border-white" src="~/template/assets/img/profiles/avatar-05.jpg" alt="img">
                                            </span>
                                            <a class="avatar bg-primary avatar-rounded text-fixed-white fs-12 fw-medium" href="javascript:void(0);">
                                                +1
                                            </a>
                                        </div>
                                    </td>
                                    <td>@project.AmountNeeded</td>
                                    <td>@project.AmountObtained</td>
                                    <td>
                                        @if (!project.Deleted)
                                        {
                                            <span class="badge bg-soft-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Project/Index" class="text-primary">
                                            <i class="ti ti-eye me-2"></i>
                                        </a>
                                        <a href="#" class="text-danger" data-bs-toggle="modal" onclick='confirmDeleteProject(@project.Id)'>
                                            <i class="ti ti-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_AddProjectModal")
@await Html.PartialAsync("_AddUserModal")