@model Core.Models.Project
@{
    Layout = "_GeneralLayout";
    ViewData["Title"] = "Project Supporters";
    var projectTitle = ViewBag.ProjectTitle ?? "Project";
}
<div class="page-wrapper">
    <div class="content">
        <div class="page-header d-flex justify-content-between align-items-center">
            <div>
                <h3 class="page-title">Supporters for @projectTitle</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Admin")">Dashboard</a>
                    </li>
                </ul>
            </div>
            <a href="@Url.Action("ExportExcel", "Admin", new { id = Model.Id })"
               class="btn btn-white text-dark border hover-text-orange">
                <i class="ti ti-file-export me-1"></i> Export
            </a>
        </div>
        <style>
            .btn-white {
                background-color: #fff !important;
                border: 1px solid #e0e0e0 !important;
                border-radius: 8px;
                padding: 8px 14px;
            }
            .hover-text-orange:hover,
            .hover-text-orange:hover i {
                color: #ff6200 !important;
            }
        </style>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="supportersTable">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="select-all"></th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Amount</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ProjectSupporters.Any())
                            {
                                foreach (var s in Model.ProjectSupporters.OrderByDescending(x => x.DateCreated))
                                {
                                    <tr>
                                        <td><input type="checkbox" class="row-check"></td>
                                        <td>@s.FullName</td>
                                        <td>@s.Email</td>
                                        <td>@s.PhoneNumber</td>
                                        <td><span class="badge bg-success">@s.Amount</span></td>
                                        <td>@s.DateCreated?.ToString("dd MMM yyyy")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">No supporters yet.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {

            $('#supportersTable').DataTable({
                pageLength: 10,
                order: [[5, "desc"]],
                columnDefs: [
                    { orderable: false, targets: [0] }
                ]
            });

            $('#select-all').on('click', function () {
                $('.row-check').prop('checked', this.checked);
            });

        });
    </script>
}
