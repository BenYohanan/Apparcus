@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "Home";
}

<section id="hero" class="hero section dark-background">
    <div class="video-background">
        <video autoplay muted loop playsinline>
            <source src="~/leadpage/assets/img/video/video-2.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <div class="video-overlay"></div>
    </div>

    <div class="hero-content">
        <div class="container position-relative text-center">
            <div class="col-lg-8 mx-auto">
                <h1 data-aos="fade-up" data-aos-delay="100">
                    Contribute to Events<br><span style="color:#9333ea">From Anywhere</span>
                </h1>
                <p data-aos="fade-up" data-aos-delay="200" class="lead">
                    Weddings, funerals, church projects, school fees support loved ones without travel or stress.
                </p>
                <div class="hero-buttons" data-aos="fade-up" data-aos-delay="300">
                    <a href="/Account/Register" class="btn btn-primary btn-lg">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="how" class="section py-5 bg-light">
    <div class="container section-title text-center" data-aos="fade-up">
        <span class="subtitle">Simple Steps</span>
        <h2 class="fw-bold">How It Works</h2>
        <p class="text-muted">Contribute in 3 easy steps — no stress, no travel.</p>
    </div>

    <div class="container">
        <div class="row g-4 justify-content-center">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card border-0 shadow-sm p-4 text-center h-100 hover-up">
                    <div class="icon-circle mb-3 bg-primary text-white mx-auto">
                        <i class="bi bi-people-fill fs-3"></i>
                    </div>
                    <h5 class="fw-semibold">1. Create or Join</h5>
                    <p class="text-muted">Start a pool or support an existing one with just a few taps.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card border-0 shadow-sm p-4 text-center h-100 hover-up">
                    <div class="icon-circle mb-3 bg-success text-white mx-auto">
                        <i class="bi bi-credit-card-2-front fs-3"></i>
                    </div>
                    <h5 class="fw-semibold">2. Pay Securely</h5>
                    <p class="text-muted">Use Paystack — card, bank, or USSD. Safe, fast, and easy.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="card border-0 shadow-sm p-4 text-center h-100 hover-up">
                    <div class="icon-circle mb-3 bg-warning text-white mx-auto">
                        <i class="bi bi-check-circle-fill fs-3"></i>
                    </div>
                    <h5 class="fw-semibold">3. Done!</h5>
                    <p class="text-muted">Funds reach the organizer within 24 hours. That’s it!</p>
                </div>
            </div>
        </div>
    </div>
    <style>
        .icon-circle {
            width: 70px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
        }

        .hover-up {
            transition: all 0.3s ease;
        }

            .hover-up:hover {
                transform: translateY(-8px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.08);
            }
    </style>
</section>
<section id="why" class="section py-5">
    <div class="container section-title text-center" data-aos="fade-up">
        <span class="subtitle">Trusted Nationwide</span>
        <h2 class="fw-bold">Why People Love Appacurs</h2>
    </div>
    <div class="container">
        <div class="row g-4">
