
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "Check Your Email";
}
<style>
    .bg-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        filter: brightness(60%);
    }

    .auth-card {
        max-width: 420px;
        margin: 100px auto;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        z-index: 10;
        position: relative;
    }

        .auth-card h2 {
            font-weight: 600;
            color: #9333ea;
        }
</style>

<video autoplay muted loop playsinline class="bg-video">
    <source src="~/leadpage/assets/img/video/video-2.mp4" type="video/mp4" />
</video>

<div class="auth-card" data-aos="zoom-in" data-aos-delay="100" style="margin-top:155px;">
    <div class="text-center mb-4">
        <img src="~/leadpage/assets/img/Apparcus logo.jpg" class="img-fluid mb-3" style="width:80px;">
        <h2>Check Your Email</h2>
    </div>

    <p>We have sent a password reset link to your email.</p>

    <a asp-action="Login" class="btn w-100 mt-3" style="background-color:#9333ea; color:white;">Back to Sign In</a>
</div>
