
@model Apparcus.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "Forgot Password";
}
<div class="auth-card" data-aos="zoom-in" data-aos-delay="100" style="margin-top:132px;">
    <div class="text-center mb-4">
        <img src="~/leadpage/assets/img/Apparcus logo.jpg" alt="Apparcus Logo" class="img-fluid mb-3" style="width:80px;">
        <h2>Forgot Password</h2>
        <p>Enter your email to reset your password</p>
    </div>

    <form asp-action="ForgotPassword" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Email Address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-3">Submit</button>

        <p class="text-center mt-2">
            <a asp-action="Login" class="fw-semibold">Back to Sign In</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
