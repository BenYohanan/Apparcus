@model Apparcus.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "Reset Password";
}
<style>
    .bg-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        filter: brightness(60%);
    }

    .auth-card {
        max-width: 420px;
        margin: 100px auto;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        z-index: 10;
        position: relative;
    }

        .auth-card h2 {
            font-weight: 600;
            color: #9333ea;
        }
</style>

<video autoplay muted loop playsinline class="bg-video">
    <source src="~/leadpage/assets/img/video/video-2.mp4" type="video/mp4" />
</video>

<div class="auth-card" data-aos="zoom-in" data-aos-delay="100" style="margin-top:155px;">
    <div class="text-center mb-4">
        <img src="~/leadpage/assets/img/Apparcus logo.jpg" class="img-fluid mb-3" style="width:80px;">
        <h2>Reset Password</h2>
        <p>Your new password must be different from previously used passwords</p>
    </div>

    <form id="resetPasswordForm" onsubmit="event.preventDefault(); resetPassword();">
        <input asp-for="Token" type="hidden" id="token" />
        <input asp-for="Email" type="hidden" id="email" />  <!-- Added hidden email -->

        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" id="password" placeholder="New Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" id="reset_submit_btn" class="btn w-100 mb-3" style="background-color:#9333ea; color:white;">Reset Password</button>  <!-- Changed to type="submit" -->
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}