<div class="modal fade" id="add_user" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Create User Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label>First Name</label>
                        <input id="firstName" class="form-control" />
                    </div>

                    <div class="mb-3 col-md-6">
                        <label>Last Name</label>
                        <input id="lastName" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label>Phone Number</label>
                        <input id="phoneNumber" class="form-control" />
                    </div>

                    <div class="mb-3 col-md-6">
                        <label>Date of Birth</label>
                        <input id="dob" type="date" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>Email</label>
                    <input id="email" type="email" class="form-control" />
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label>Password</label>
                        <input id="password" type="password" class="form-control" />
                    </div>

                    <div class="mb-3 col-md-6">
                        <label>Confirm Password</label>
                        <input id="confirmPassword" type="password" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>User Type</label>
                    <select id="isAdmin" class="form-control">
                        <option value="false"> User</option>
                        <option value="true">Admin</option>
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button id="add_user_btn" onclick="addUser()" class="btn btn-primary">Add User</button>
            </div>

        </div>
    </div>
</div>
